    "xl": "0.75rem",
    "2xl": "1rem",
    "3xl": "1.5rem",
    "full": "9999px"
  },

  "shadows": {
    "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
    "base": "0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06)",
    "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
    "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
    "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)",
    "2xl": "0 25px 50px -12px rgba(0, 0, 0, 0.25)",
    "inner": "inset 0 2px 4px 0 rgba(0, 0, 0, 0.06)",
    "none": "none"
  },

  "breakpoints": {
    "xs": "320px",
    "sm": "640px",
    "md": "768px",
    "lg": "1024px",
    "xl": "1280px",
    "2xl": "1536px"
  },

  "grid": {
    "columns": {
      "xs": "4",
      "sm": "8", 
      "md": "12",
      "lg": "12",
      "xl": "12",
      "2xl": "12"
    },
    "gap": {
      "xs": "1rem",
      "sm": "1.5rem",
      "md": "2rem",
      "lg": "2.5rem",
      "xl": "3rem",
      "2xl": "3.5rem"
    }
  },

  "components": {
    "button": {
      "sizes": {
        "xs": {
          "padding": "0.5rem 1rem",
          "fontSize": "0.75rem",
          "borderRadius": "0.375rem"
        },
        "sm": {
          "padding": "0.625rem 1.25rem",
          "fontSize": "0.875rem",
          "borderRadius": "0.375rem"
        },
        "md": {
          "padding": "0.75rem 1.5rem",
          "fontSize": "1rem",
          "borderRadius": "0.5rem"
        },
        "lg": {
          "padding": "1rem 2rem",
          "fontSize": "1.125rem",
          "borderRadius": "0.5rem"
        },
        "xl": {
          "padding": "1.25rem 2.5rem",
          "fontSize": "1.25rem",
          "borderRadius": "0.75rem"
        }
      },
      "variants": {
        "primary": {
          "background": "var(--color-primary-500)",
          "color": "var(--color-text-inverse)",
          "border": "none",
          "hover": {
            "background": "var(--color-primary-600)"
          },
          "active": {
            "background": "var(--color-primary-700)"
          },
          "disabled": {
            "background": "var(--color-neutral-600)",
            "color": "var(--color-neutral-400)"
          }
        },
        "secondary": {
          "background": "var(--color-secondary-500)",
          "color": "var(--color-text-inverse)",
          "border": "none",
          "hover": {
            "background": "var(--color-secondary-600)"
          },
          "active": {
            "background": "var(--color-secondary-700)"
          },
          "disabled": {
            "background": "var(--color-neutral-300)",
            "color": "var(--color-neutral-500)"
          }
        },
        "outline": {
          "background": "transparent",
          "color": "var(--color-primary-500)",
          "border": "2px solid var(--color-primary-500)",
          "hover": {
            "background": "var(--color-primary-900)",
            "borderColor": "var(--color-primary-600)"
          },
          "active": {
            "background": "var(--color-primary-800)",
            "borderColor": "var(--color-primary-700)"
          },
          "disabled": {
            "background": "transparent",
            "color": "var(--color-neutral-500)",
            "borderColor": "var(--color-neutral-600)"
          }
        },
        "ghost": {
          "background": "transparent",
          "color": "var(--color-text-primary)",
          "border": "none",
          "hover": {
            "background": "var(--color-neutral-800)"
          },
          "active": {
            "background": "var(--color-neutral-700)"
          },
          "disabled": {
            "background": "transparent",
            "color": "var(--color-neutral-500)"
          }
        }
      }
    },
    "input": {
      "sizes": {
        "sm": {
          "padding": "0.5rem 0.75rem",
          "fontSize": "0.875rem",
          "borderRadius": "0.375rem"
        },
        "md": {
          "padding": "0.75rem 1rem",
          "fontSize": "1rem",
          "borderRadius": "0.5rem"
        },
        "lg": {
          "padding": "1rem 1.25rem",
          "fontSize": "1.125rem",
          "borderRadius": "0.5rem"
        }
      },
      "states": {
        "default": {
          "border": "1px solid var(--color-border-light)",
          "background": "var(--color-background-secondary)",
          "color": "var(--color-text-primary)"
        },
        "focus": {
          "border": "2px solid var(--color-primary-500)",
          "boxShadow": "0 0 0 3px rgba(255, 215, 0, 0.2)"
        },
        "error": {
          "border": "2px solid var(--color-status-error-500)",
          "background": "var(--color-status-error-900)"
        },
        "disabled": {
          "border": "1px solid var(--color-border-light)",
          "background": "var(--color-neutral-800)",
          "color": "var(--color-neutral-500)"
        }
      }
    },
    "card": {
      "padding": "1.5rem",
      "borderRadius": "0.75rem",
      "border": "1px solid var(--color-border-light)",
      "background": "var(--color-background-secondary)",
      "boxShadow": "var(--shadow-base)",
      "hover": {
        "boxShadow": "var(--shadow-lg)"
      }
    },
    "sidebar": {
      "width": "280px",
      "background": "var(--color-background-secondary)",
      "border": "1px solid var(--color-border-light)",
      "padding": "1.5rem"
    }
  },

  "effects": {
    "transitions": {
      "fast": "150ms ease-in-out",
      "normal": "250ms ease-in-out",
      "slow": "350ms ease-in-out"
    },
    "animations": {
      "fadeIn": {
        "from": { "opacity": "0" },
        "to": { "opacity": "1" }
      },
      "slideUp": {
        "from": { "transform": "translateY(20px)", "opacity": "0" },
        "to": { "transform": "translateY(0)", "opacity": "1" }
      },
      "scaleIn": {
        "from": { "transform": "scale(0.95)", "opacity": "0" },
        "to": { "transform": "scale(1)", "opacity": "1" }
      }
    }
  },

  "imageRatios": {
    "square": {
      "ratio": "1:1",
      "resolution": "800x800",
      "format": "PNG",
      "usage": "썸네일, 아이콘, 프로필 이미지"
    },
    "portrait": {
      "ratio": "3:4",
      "resolution": "900x1200",
      "format": "PNG",
      "usage": "포스터형 이미지, 이벤트 소개 카드"
    },
    "landscape": {
      "ratio": "4:3",
      "resolution": "1024x768",
      "format": "PNG",
      "usage": "콘텐츠 본문 내 이미지, 갤러리 썸네일"
    },
    "wide": {
      "ratio": "16:9",
      "resolution": "1280x720",
      "format": "PNG",
      "usage": "메인 배너, 영상 커버 이미지"
    },
    "mobile": {
      "ratio": "9:16",
      "resolution": "720x1280",
      "format": "PNG",
      "usage": "모바일 전용 콘텐츠, 전체화면 배너"
    }
  },

  "accessibility": {
    "contrast": {
      "minimum": "4.5:1",
      "enhanced": "7:1"
    },
    "focus": {
      "outline": "2px solid var(--color-primary-500)",
      "outlineOffset": "2px"
    },
    "targetSize": {
      "minimum": "44px"
    }
  }
}
